@model Vidly.ViewModels.BooksViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <caption>Books</caption>
    <thead>
        <tr><th>Books</th></tr>
    </thead>
    @{
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr><td>@Html.ActionLink(book.Name, "Details", "Books", routeValues: new { id = book.Id }, htmlAttributes: null)</td></tr>
            }
        </tbody>
    }
</table>