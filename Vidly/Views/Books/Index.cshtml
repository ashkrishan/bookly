@model IEnumerable<Vidly.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Uncomment below to test if there are no customers*@
@*@{    Model.Books.Clear(); }*@

@if (Model.Count() == 0)
{
    <h3>Currently there is no book to display.</h3>
}

else
{
    <table class="table table-hover">
        <caption style="font-size: large;">Books</caption>
        <thead>
            <tr><th>Books</th></tr>
        </thead>

        <tbody>
            @foreach (var book in Model)
            {
                            <tr><td> @Html.ActionLink(book.Name, "Details", "Books", routeValues: new { id = book.Id }, htmlAttributes: null) </td></tr>
            }
        </tbody>

    </table>
}
